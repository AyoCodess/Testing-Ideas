html {
  font-size: 62.5%;
  box-sizing: border-box;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  width: 100%;
  height: 100%;
  font-family: "Montserrat", sans-serif;
  font-size: 2rem;
}

body {
  background-image: linear-gradient(150deg, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2)), url(851283c0c5f9bc5f98d81e70f2ed1f7b);
  background: cover;
  background-position: center center fixed;
}
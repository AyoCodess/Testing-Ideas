html {
  font-size: 62.5%;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

body {
  margin: 3rem;
  font-family: lato, sans-serif;
  font-weight: 500;
  font-size: 1.7rem;
  background-color: white;
  color: green;
  min-height: 100vh;
  background-image: linear-gradient(150deg, rgba(255, 255, 255, 0.5), rgba(144, 238, 144, 0.5));
}

.margin-bottom {
  margin-bottom: 5rem;
}

.margin-bottom-small {
  margin-bottom: 2.5rem;
}

h1 {
  border-bottom: 10px solid green;
  text-align: center;
  font-size: 5rem;
  color: darkcyan;
}

.nav {
  text-align: center;
  margin-top: 0rem;
  margin-bottom: 3rem;
  list-style: none;
}
.nav__item {
  display: inline-block;
  color: green;
  font-size: 1.5rem;
  cursor: pointer;
}
.nav a {
  text-decoration: none;
}
.nav a:link,
.nav a:visited {
  color: green;
}
.nav a:hover {
  color: red;
}
.nav__item:not(:first-child) {
  margin-left: 1rem;
}

.ayo {
  width: 10rem;
  height: 10rem;
}

.con {
  margin: 10rem;
}

.user {
  font-size: 3rem;
}

.pic1 {
  width: 50%;
}

.img__container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.img__container img {
  max-width: 50rem;
  max-height: 20rem;
  object-fit: cover;
  transition: all 0.5s;
  margin: 1rem;
  box-shadow: 0 1rem 5rem rgba(0, 128, 0, 0.3);
}
.img__container img:hover {
  transform: scale(1.1);
}

.btncon {
  display: flex;
  justify-content: center;
}
.btncon .test {
  font-size: 3rem;
  border-radius: 500px;
  background-color: aquamarine;
  box-shadow: 0rem 1rem 4rem;
}
.btncon .test span {
  margin: 0rem 1rem;
}
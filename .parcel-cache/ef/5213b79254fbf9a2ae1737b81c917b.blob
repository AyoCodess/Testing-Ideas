html {
  font-size: 62.5%;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

body {
  margin: 10rem;
  font-family: Roboto, sans-serif;
  font-weight: 500;
  font-size: 1.7rem;
  background-color: white;
  color: green;
  min-height: 100vh;
  background-image: linear-gradient(150deg, rgba(255, 255, 255, 0.5), rgba(144, 238, 144, 0.5));
}

.margin-bottom {
  margin-bottom: 5rem;
}

.margin-bottom-small {
  margin-bottom: 2.5rem;
}

h1 {
  border: 10px solid green;
  text-align: center;
  font-size: 10rem;
  color: darkcyan;
}

.nav {
  margin-top: 0rem;
  margin-bottom: 3rem;
  list-style: none;
}
.nav__item {
  display: inline-block;
  color: green;
  font-size: 3rem;
  cursor: pointer;
}
.nav a {
  text-decoration: none;
}
.nav a:link,
.nav a:visited {
  color: green;
}
.nav a:hover {
  color: red;
}
.nav__item:not(:first-child) {
  margin-left: 1rem;
}

.ayo {
  width: 10rem;
  height: 10rem;
}

.con {
  margin: 10rem;
}

.user {
  font-size: 3rem;
}
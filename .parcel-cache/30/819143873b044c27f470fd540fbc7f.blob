html {
  font-size: 62.5%;
  box-sizing: border-box;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  width: 100%;
  height: 100vh;
  font-family: "Montserrat", sans-serif;
  font-size: 2rem;
  background-color: #3f585a;
}

body {
  height: 100vh;
  background-image: linear-gradient(150deg, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2)), url(4561fd6be489f5ab67195e49dfc39d63);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.container-startup {
  display: flex;
  flex-direction: column;
}

.heading {
  padding: 4rem 1rem 7rem;
}

.heading h1 {
  font-size: 1.3rem;
  text-align: center;
  text-transform: uppercase;
}

.heading__title {
  color: white;
  animation: fade 3s;
}

.btn {
  border-radius: 500px;
  box-shadow: 0rem 0rem 5rem rgba(255, 255, 255, 0.4);
  animation: bounce 2s infinite;
}

.btn__container {
  display: flex;
  justify-content: center;
  animation: fade 10s;
}

@keyframes bounce {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
}

@keyframes fade {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}
html {
  font-size: 62.5%;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

body {
  margin: 10rem;
  font-size: 1.5rem;
  background-color: white;
  color: blue;
  background-image: linear-gradient(150deg, white, red), url("/img/IMG_0367.JPG");
  width: 100%;
  background-size: cover;
}

.nav:first-child {
  margin-top: 10rem;
}

.ayo {
  width: 10rem;
  height: 10rem;
}

.con {
  margin: 10rem;
}

.user {
  font-size: 3rem;
}
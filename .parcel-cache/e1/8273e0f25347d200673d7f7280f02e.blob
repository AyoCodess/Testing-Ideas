html {
  font-size: 62.5%;
  box-sizing: border-box;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  width: 100%;
  height: 100vh;
  font-family: "Montserrat", sans-serif;
  font-size: 2rem;
}

body {
  background-image: linear-gradient(150deg, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2)), url(851283c0c5f9bc5f98d81e70f2ed1f7b);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.container-startup {
  display: flex;
  flex-direction: column;
}

.heading {
  padding: 4rem 1rem 7rem;
}

.heading h1 {
  font-size: 1.3rem;
  text-align: center;
  text-transform: uppercase;
}

.heading__title {
  color: white;
}

.btn {
  border-radius: 500px;
  box-shadow: 0rem 4rem 2rem rgba(255, 255, 255, 0.5);
}

.btn__container {
  display: flex;
  justify-content: center;
}
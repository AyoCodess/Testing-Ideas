html {
  font-size: 62.5%;
  box-sizing: border-box;
}

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  width: 100%;
  height: 100vh;
  font-family: "Montserrat", sans-serif;
  font-size: 2rem;
}

body {
  background-image: linear-gradient(150deg, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2)), url(/startup-test/header.jpg);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.container-startup {
  display: flex;
  flex-direction: column;
}

.heading {
  padding: 4rem 1rem 7rem;
}
.heading h1 {
  font-size: 1.3rem;
  text-align: center;
  text-transform: uppercase;
}
.heading__title {
  color: white;
}
.btn {
  border-radius: 500px;
  box-shadow: 0rem 0rem 5rem rgba(255, 255, 255, 0.4);
  animation: bounce 1s infinite;
}

.btn__container {
  display: flex;
  justify-content: center;
}

@keyframes bounce {
  0% {
    transition: trans;
  }
}